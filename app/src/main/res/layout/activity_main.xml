<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="412dp"
            android:layout_height = "60dp"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Hello\nWelcome to Gully Cricket"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/addMatch"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="#069AE8"
            android:text="Add Match" />

        <Button
            android:id="@+id/playerStats"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#069AE8"
            android:text="Player Stats" />

        <Button
            android:id="@+id/matchHistory"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="#069AE8"
            android:text="Match History" />

    </LinearLayout>

</LinearLayout>
